<div class="page-header">
<h1 style="text-align: center;">PÃ¡gina Inicial</h1>
</div>

<hr>

<div class="row"> 
	<div class="col-xs-10">
		<% @posts.each do |post| %>

		  <h2><%= post.title %></h2>
		  <h3>Assunto: <%= post.subject %></h3>
		  <p><%= resume post.text %></p>
		  <h4>Author: <%= post.author.name %> </h4>
		  <small>Data: <%= post.created_at %> </small>

		  <hr/>

		<% end %>
	</div>

	<div class="col-xs-2">
		<div class="panel panel-default">
		  <div class="panel-heading">Categorias</div>
		  <div class="panel-body">
		  <ul>
			    <% Category.all.each do |category| %>
			    	<li>
			    		<%= link_to category.description, homepage_posts_path(category_id: category.id) %>
			    	</li>
			    <% end %>
		    </ul>
		  </div>
		</div>
		<div class="panel panel-default">
		  <div class="panel-heading">Pesquisar</div>
		  <div class="panel-body">
			<%= form_tag homepage_posts_path, :method => 'post' do %>
			  <p>
			    <%= text_field_tag :search %>
			    <%= submit_tag "Buscar"%>
			  </p>
			<% end %>
		  </div>
		</div>
	</div>
</div>
