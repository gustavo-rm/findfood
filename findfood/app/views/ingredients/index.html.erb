<p id="notice"><%= notice %></p>

<h1>Ingredients</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.description %></td>
        <td><%= link_to 'Show', ingredient, :class => "btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient), :class => "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', ingredient, :class => "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_ingredient_path, class: 'btn btn-primary' %>
