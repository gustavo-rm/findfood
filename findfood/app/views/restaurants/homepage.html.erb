<main role="main">
  <p id="notice"><%= notice %></p>
  <% @restaurants.order(:name).all.each do |restaurant| %>
  <section class="jumbotron text-center bg-restaurant">
    <div class="container bg-text">
      <h1 class="jumbotron-heading"><%= restaurant.name %></h1>
      <p class="lead">Endereço: <%= restaurant.address %></p>
      <p>Telefone: <%= restaurant.phone %></p>
      <p>
        <%= link_to "Informações", "restaurants/#{restaurant.id}", class:"btn btn-primary my-2"%>
      </p>
    </div>
  </section>  

  <div class="album py-5 bg-light">

      <div class="row">
        <div class="container col-md-10">
          <% restaurant.dishes.order(:description).each do |dish| %>
        <div class="col-md-2" style="display: inline-block;">
          <div class="card mb-4 shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" focusable="false">
              <defs>
              <pattern id="img1" patternUnits="userSpaceOnUse" width="100%" height="100%">
                <image xlink:href="https://images.unsplash.com/photo-1455619452474-d2be8b1e70cd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" x="0" y="0" width="100%" height="100%" />
              </pattern>
            </defs>
              <title>Placeholder</title>
              <rect width="100%" height="100%" fill="url(#img1)"/>
              <text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= dish.description %></text>
            </svg>
            <div class="card-body" style="text-align: center;">
              <p class="card-text">Ingredientes: <%= dish.ingredients.order(:description).map(&:description).join(', ') %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div style="display: inline; width: 100%">
                  <p class="bg-text" style="text-align: center;">Preço: R$ <%= dish.price %> </p>
                  <p>Tempo de Preparo: <%= dish.preparationtime %> minutos</p>
                  <hr>
                  <small class="text-muted">Data: <%= dish.created_at %></small>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</main>