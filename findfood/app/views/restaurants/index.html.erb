<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= link_to 'Show', restaurant, :class => "btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant), :class => "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', restaurant, :class => "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-primary' %>
